using System;

namespace matrci1
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введіть кількість елементів масиву: \t");
            int CountMas = int.Parse(Console.ReadLine());
            int[] mas = new int[CountMas];
            Console.WriteLine("\n Введіть ваш масив:");
            for (int i = 0; i < mas.Length; i++)
            {

                mas[i] = int.Parse(Console.ReadLine());
            }
            int counter=0;

            Console.WriteLine("\n Вивести кількість елементів, у яких два сусідні і, при цьому, обидва сусідні елементи менші від даного: ");
     

            for (int i = 1; i < mas.Length-1; i++)
            {

                if (mas[i] < mas[i + 1]&& mas[i]<mas[i-1])

                    counter++;

                

            }
          Console.WriteLine(counter);





            Console.ReadLine();

        }


    }
}



